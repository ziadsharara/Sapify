<mvc:View
  controllerName="sapify.controller.Login"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  displayBlock="true"
  height="100%"
>
  <Page
    title="{i18n>loginTitle}"
    class="sapUiResponsiveContentPadding"
    showHeader="false"
    enableScrolling="false"
  >
    <content>
      <l:VerticalLayout
        class="sapUiContentPadding"
        width="100%"
        height="100%"
      >
        <l:VerticalLayout
          width="100%"
          class="sapUiSmallMarginBottom"
        >
          <Title
            text="{i18n>appTitle}"
            titleStyle="H1"
            class="sapUiSmallMarginBottom"
          />
          <Title
            text="{i18n>loginSubtitle}"
            titleStyle="H4"
            class="sapUiSmallMarginBottom"
          />
        </l:VerticalLayout>
        
        <l:VerticalLayout
          width="100%"
          class="sapUiSmallMarginBottom"
        >
          <Input
            id="emailInput"
            placeholder="{i18n>emailPlaceholder}"
            type="Email"
            width="100%"
            class="sapUiSmallMarginBottom"
          />
          <Input
            id="passwordInput"
            placeholder="{i18n>passwordPlaceholder}"
            type="Password"
            width="100%"
            class="sapUiSmallMarginBottom"
          />
        </l:VerticalLayout>
        
        <l:VerticalLayout
          width="100%"
        >
          <Button
            text="{i18n>loginButton}"
            type="Emphasized"
            width="100%"
            press="onLogin"
            class="sapUiSmallMarginBottom"
          />
          <Button
            text="{i18n>registerButton}"
            type="Default"
            width="100%"
            press="onNavToRegister"
          />
        </l:VerticalLayout>
      </l:VerticalLayout>
    </content>
  </Page>
</mvc:View>