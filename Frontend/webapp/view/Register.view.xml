<mvc:View
  controllerName="sapify.controller.Register"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  displayBlock="true"
  height="100%"
>
  <Page
    title="{i18n>registerTitle}"
    class="sapUiResponsiveContentPadding"
    showNavButton="true"
    navButtonPress="onNavBack"
  >
    <content>
      <l:VerticalLayout
        class="sapUiContentPadding"
        width="100%"
      >
        <l:VerticalLayout
          width="100%"
          class="sapUiSmallMarginBottom"
        >
          <Title
            text="{i18n>registerSubtitle}"
            titleStyle="H2"
            class="sapUiSmallMarginBottom"
          />
        </l:VerticalLayout>
        
        <l:VerticalLayout
          width="100%"
          class="sapUiSmallMarginBottom"
        >
          <Input
            id="usernameInput"
            placeholder="{i18n>usernamePlaceholder}"
            type="Text"
            width="100%"
            class="sapUiSmallMarginBottom"
          />
          <Input
            id="emailInput"
            placeholder="{i18n>emailPlaceholder}"
            type="Email"
            width="100%"
            class="sapUiSmallMarginBottom"
          />
          <Input
            id="passwordInput"
            placeholder="{i18n>passwordPlaceholder}"
            type="Password"
            width="100%"
            class="sapUiSmallMarginBottom"
          />
          <Select
            id="roleSelect"
            width="100%"
            class="sapUiSmallMarginBottom"
            enabled="{= ${/userRole} === 'Admin' }"
          >
            <items>
              <core:Item key="Employee" text="{i18n>roleEmployee}" />
              <core:Item key="Manager" text="{i18n>roleManager}" />
              <core:Item key="Admin" text="{i18n>roleAdmin}" />
            </items>
          </Select>
        </l:VerticalLayout>
        
        <l:VerticalLayout
          width="100%"
        >
          <Button
            text="{i18n>registerButton}"
            type="Emphasized"
            width="100%"
            press="onRegister"
            class="sapUiSmallMarginBottom"
          />
        </l:VerticalLayout>
      </l:VerticalLayout>
    </content>
  </Page>
</mvc:View>